<div class="col">
    <div class="card rounded-3 employee-card">
        <div class="card-header py-3">
            <h4>@DeviceInfo.DeviceName @DeviceInfo.DeviceType</h4>
        </div> 
        <div class="card-body employee-card text-center">
            <img src="@($"images/{DeviceInfo.DeviceName}.jpg")" class="employee-img" />
        </div>
        <button class="btn btn-primary btn-sm mb-1"
        @onclick="@(async () => await DeviceQuickViewClicked.InvokeAsync(DeviceInfo))">
        Quick View
        </button>
        <a href="@($"devicedetail/{DeviceInfo.DeviceName}")" class="btn btn-outline-primary btn-sm mb-1">
            Full details
        </a>
    </div>
</div>